function [] = test()
    i=1;
    while(1)
        i=i+1
        check(); 
    end
end 

function [] = check()
    f = figure;
    h = uicontrol('Position',[20 20 200 40],'String','stop',...
                  'Callback',' ');
    disp('This will print immediately');
    
    uiwait(gcf,1);
    disp('This will print after you click Continue');
    close(f);
end 

